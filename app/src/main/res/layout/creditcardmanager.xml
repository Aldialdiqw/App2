<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".CreditCardActivity">

    <!-- Add Card Button -->
    <Button
        android:id="@+id/btn_add_card"
        android:layout_width="64dp"
        android:layout_height="55dp"
        android:text="+"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp" />

    <!-- RecyclerView for Credit Cards -->


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_cards"
        android:layout_width="369dp"
        android:layout_height="458dp"
        android:clipToPadding="false"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_add_card"
        app:layout_constraintVertical_bias="0.285" />

    <ImageView
        android:id="@+id/img_fingerprint"
        android:layout_width="105dp"
        android:layout_height="49dp"
        android:contentDescription="Fingerprint image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>