<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".YourActivity">

    <!-- MaterialCardView for ID card appearance -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_id_document"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        android:backgroundTint="@color/teal"
        app:strokeColor="@android:color/white"
        app:strokeWidth="2dp">

        <!-- ConstraintLayout for structured content -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Government Emblem -->
            <ImageView
                android:id="@+id/iv_emblem"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Government Emblem"
                android:src="@drawable/kosovoemblemvector"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- ID Card Title -->
            <TextView
                android:id="@+id/tv_id_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="National Identity Card"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@id/iv_emblem"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/iv_emblem"
                android:gravity="center"
                android:paddingStart="8dp" />

            <!-- Profile Picture -->

            <!-- Personal Information -->
            <ImageView
                android:id="@+id/iv_profile_picture"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/profile_picture_border"
                android:contentDescription="Profile Picture"
                android:src="@drawable/ic_profile_placeholder"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_emblem"
                app:layout_constraintVertical_bias="0.17" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@id/iv_profile_picture"
                app:layout_constraintTop_toBottomOf="@id/tv_id_title"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/tv_full_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:paddingTop="4dp" />

                <TextView
                    android:id="@+id/tv_id_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID Number: 123456789"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:paddingTop="4dp" />

                <TextView
                    android:id="@+id/tv_birthdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Birthdate: 01/01/1990"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:paddingTop="4dp" />

                <TextView
                    android:id="@+id/tv_nationality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nationality: USA"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:paddingTop="4dp" />

                <TextView
                    android:id="@+id/tv_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender: Male"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:paddingTop="4dp" />

                <TextView
                    android:id="@+id/tv_expiry_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expiry Date: 01/01/2030"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:paddingTop="4dp" />
            </LinearLayout>

            <!-- Signature Placeholder -->
            <TextView
                android:id="@+id/tv_signature"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Signature"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:gravity="center"
                android:paddingTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_profile_picture"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
